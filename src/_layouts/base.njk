{% set assetHash = global.random() %}

<!DOCTYPE html>
<html lang="{{ site.lang }}">
  <head>
    <!-- charset/http-equiv/viewport -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- title -->
    <title>
      {% if seo.title %}{{ seo.title }}
      {% elif title %}{{ title }}
      {% else %}{{ site.siteName }}{% endif %}
    </title>

    <link rel="stylesheet" href="/assets/css/global.css?{{ assetHash }}" />

    {# https://www.matuzo.at/blog/html-boilerplate/ #}
    <script type="module">
      document.documentElement.classList.add('has-js');
    </script>

    <!-- preloads -->
    <link
      rel="preload"
      href="/assets/scripts/app.js?{{ assetHash }}"
      as="script"
      fetchpriority="high"
    >
    <link
      rel="preload"
      href="/assets/fonts/inter-partial-subset.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- preloads in page data -->
    {% if preloads -%}
    <!-- prettier-ignore -->
    <link rel="preload"
      href="{{ preloads.href }}"
      as="{{ preloads.as }}"
      {% if preloads.type %}type={{ preloads.type }}{% endif %}{% if preloads.imagesrcset %}imagesrcset="{{ preloads.imagesrcset }}" {% endif %}
      {% if preloads.crossorigin %}crossorigin{% endif %} />
    {% endif %}

    <!-- everything else: meta tags, icons, open graph etc.  -->
    {% include "partials/meta-info.njk" %}
    <meta name="view-transition" content="same-origin">
  </head>

  <body class="stack {{ layout }}-page">
    <!-- header -->
    {% include "partials/site-header.njk" %}

    <!-- content slot -->
    <main id="main">
      {{ content | safe }}
    </main>

    <!-- footer -->
    {% include "partials/site-footer.njk" %}

    <!-- defered js  -->
    <script src="/assets/scripts/app.js?{{ assetHash }}" defer></script>
    {% if youtube %}
    <!-- youtube if actvated in yaml -->
      <script src="/assets/scripts/lite-youtube.js?{{ assetHash }}" defer></script>
    {% endif %}
  </body>
</html>
